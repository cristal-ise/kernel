<mapping>
    <class name="org.cristalise.kernel.process.security.ReadAccessControl">
        <map-to xml="ReadAccessControl" />
        <field name="accessType" type="org.cristalise.kernel.process.security.ACLType">
            <bind-xml name="accessType" node="attribute" />
        </field>
        <field name="targetType" type="org.cristalise.kernel.process.security.ACLTarget">
            <bind-xml name="targetType" node="attribute" />
        </field>
        <field name="targetID" type="string" direct="false">
            <bind-xml node="text" />
        </field>
    </class>

    <class name="org.cristalise.kernel.process.security.AccessControlList">
        <map-to xml="AccessControlList" />

        <field name="clusterPath">
            <bind-xml name="clusterPath" node="attribute" />
        </field>

        <field name="list" collection="arraylist" direct="true" type="org.cristalise.kernel.process.security.ReadAccessControl">
            <bind-xml name="AccessControlEntry" node="element" />
        </field>
    </class>
</mapping>
